#include <xc.h>
#define _XTAL_FREQ 20000000


// CONFIGURATION BITS
#pragma config FOSC = HS
#pragma config WDTE = OFF
#pragma config PWRTE = OFF
#pragma config BOREN = ON
#pragma config LVP = OFF
#pragma config CPD = OFF
#pragma config WRT = OFF
#pragma config CP = OFF

// LCD Control Pins
#define RS PORTCbits.RC1
#define RW PORTCbits.RC0
#define EN PORTCbits.RC2

void lcd_cmd(unsigned char cmd)
{
PORTD = (cmd & 0xF0); // Mask lower 4 bits, send upper 4 bits
EN = 1; 
RW = 0; 
RS = 0; 
__delay_ms(5);
EN = 0;
PORTD = ((cmd << 4) & 0xF0); // Shift lower 4 bits to upper position
EN = 1;
RW = 0;
RS = 0;
__delay_ms(5);
EN = 0;
}

void lcd_data(unsigned char data)
{
PORTD = (data & 0xF0); // Mask lower 4 bits, send upper 4 bits
EN = 1;
RW = 0;
RS = 1;
__delay_ms(5);
EN = 0;
PORTD = ((data << 4) & 0xF0); // Shift lower 4 bits to upper position
EN = 1;
RW = 0;
RS = 1;
__delay_ms(5);
EN = 0;
}

void lcd_string (const unsigned char *str, unsigned char num)//str = system
{
    unsigned char i;
    for ( i=0;i<num;i++)
        lcd_data(str[i]);
}

void lcd_initialise()
{
    lcd_cmd(0x28);//4-bit mode, 2 lines, 5x8 font
    lcd_cmd(0x06);//shift cursor right
    lcd_cmd(0x0C);//LCD On, cursor off
    lcd_cmd(0x01);//clear display screen
    __delay_ms(10);

}

void main(void) {
    TRISD = 0x00;
    TRISC = 0x00;
    __delay_ms(200); 
    lcd_initialise();
    while (1) {
        lcd_cmd(0x80);
        lcd_string("ABCDE",5);
        lcd_cmd(0xC0);
        lcd_string("HI",2);
         __delay_ms(1000); 
    }
    return;
}
